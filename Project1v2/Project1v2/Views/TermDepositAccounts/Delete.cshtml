@model BankModels.TermDepositAccount

@{
    ViewData["Title"] = "Close";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Close</h1>

<h3>Are you sure you want to Close this Account?</h3>
<h3>All remaining funds, if any, will be mailed to you in the form of a check</h3>
<div>
    <h4>TermDepositAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Maturity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Maturity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Close" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
